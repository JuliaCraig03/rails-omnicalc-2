<h1>Division</h1>

<dl>
  <dt>First number</dt>
  <dd><%= @first_number %></dd>

  <dt>Second number</dt>
  <dd><%= @second_number %></dd>

  <dt>Result</dt>
  <dd>
   <% if @second_number == 0 %>
    Division by zero is not allowed.
  <% else %>
  <%= @div = @first_number / @second_number %>
  <%= @div %>
  <% end %>
  </dd>
</dl>

<a href="/divide">Do another division</a>
